.login-form
  %h2
    Информация профиля
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    .row-fluid
      .span3
        Email
      .span9
        = f.email_field :email, :autofocus => true, class: 'span12'
    .row-fluid
      .span3
        Телефон
      .span9
        = f.phone_field :phone, class: 'span12'
    .row-fluid
      .span3
        Адрес
      .span9
        = f.text_field :address, class: 'span12'
    %hr
    .row-fluid
      .span12.text-center
        (оставьте пустым если не хотите менять)
    .row-fluid
      .span3
        Пароль
      .span9
        = f.password_field :password, :autocomplete => "off", class: 'span12'
    .row-fluid
      .span3
        Повторите пароль
      .span9
        = f.password_field :password_confirmation, class: 'span12'
    %hr
    .row-fluid
      .span12.text-center
        (введите ваш текущий пароль для подтверждения изменений)
    .row-fluid
      .span3
        Текущий пароль
      .span9
        = f.password_field :current_password, class: 'span12'
    .row-fluid
      .span12
        .text-center
          = f.submit "Сохранить изменения", class: 'btn btn-success'
          = link_to "Назад", :back, class: 'btn btn-success'
