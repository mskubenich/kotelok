!!!
%html
  %head
    %title
      Kotelok
  = stylesheet_link_tag "application", controller_path, :media => "all"
  = javascript_include_tag "application", controller_path
  = csrf_meta_tags
  = yield :assets
%body
  .row-fluid
    .span10.offset1
      %br
      .navbar
        .navbar-inner
          %a.brand{ href: "#" }
            Boilers
          %ul.nav
            %li{class: "#{'active' if @tab == 'boilers'}"}
              = link_to 'На главную', root_path
            %li{class: "#{'active' if @tab == 'admin'}"}
              = link_to 'Админка', admin_boilers_path
      .row-fluid
        .span2
          %ul.nav.nav-tabs.nav-stacked.non-print
            - if current_user
              %li
                = link_to 'Выход', destroy_user_session_path, method: :delete
            - else
              %li
                = link_to 'Вход администратора', new_user_session_path
          %ul.nav.nav-tabs.nav-stacked.non-print
            %li
              = link_to 'Boilers', admin_boilers_path
            %li
              = link_to 'Zapchasti', "#"
            %li
              = link_to 'Documentation', "#"
        .span10
          = yield
